<div id="findId-container" class="container">
    <div class="row d-flex justify-content-center mx-auto">
        <div class="col-md-6 col-xs-12 div-style">
        <form  accept-charset="UTF-8" role="form" method="POST" action="/user/findid">
            <div class="d-flex justify-content-center mx-auto main-label" style="margin: 30px 0 10px 0;">
                <h4 style="margin-top: 50px;">비밀번호 변경</h4>
            </div>
            <div class="form-group">
                <input type="text" name="uid" class="form-control text-box" value="<%=userid%>" disabled>
            </div>
            <div class="form-group">
                <input type="password" name="pass" class="form-control text-box" placeholder="새로운 비밀번호를 입력해주세요">
            </div>
            <div class="form-group">
                <input type="password" name="pass2" class="form-control text-box" placeholder="새로운 비밀번호를 입력해주세요">
            </div>
            <div class="form-group justify-content-center d-flex">
                <button type="submit" id="findId-btn" class="btn btn-danger button-submit btn-block">확인</button>
            </div>
        </form> 
    </div>
    </div>
</div>